/* VARIABLES */
green = #094c3a
ltgreen = #094e3a
yellow = #fff200

/* MIXONS */
linkhover()
	opacity 0.7

appBtn()
	background green
	border solid 2px ltgreen

/* OVERRIDES */
.form-control
	width 110px

.btn,
.btn:focus,
.btn:active:focus {
	appBtn()
	outline none
}

.btn:hover,
.btn:active
	appBtn()
	opacity .9

.control-label
	float left
	margin-right 15px
	width 110px

.form-group
	margin 0 auto !important /* I know I hate that shit too */
	padding-bottom 15px
	width 240px

/* GENERIC PAGE ELEMENT STYLES */
h1 {
	font-family: 'college_bold';
	word-spacing: -.15em;
}

body {
	font-family: 'college_semi-condensed';
}


/* SPECIFIC PAGE ELEMENT STYLES */
.shareResult
	margin-top 10px

.view_credits
	line-height 3.75em


#credits
	display none

	a
		color green
		&:hover
			linkhover()
			text-decoration none

	.hide_credits
		line-height 3.75em
		margin-bottom 30px

/*  MEDIA QUERIES */
@media screen and (min-width: 768px)
	.form-group
		width 300px